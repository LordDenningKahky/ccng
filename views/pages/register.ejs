<%- include('../partials/header.ejs'); -%>

<div class="container">
    <h3>Register</h3>
    <form action="/pay" method="post">
    <input required class="form-control" type="text" name="fname" placeholder="First Name:"> <br>
    <input required class="form-control" type="text" name="lname" placeholder="Last Name:"> <br>
    <input required class="form-control" type="text" name="uid" placeholder="Username:"> <br>
    <input required class="form-control" type="email" name="email" placeholder="Email:"> <br>
    <input required class="form-control" type="password" name="pwd" placeholder="Password:"> <br>
    <b>Fee:$2.30</b> <br>
    <input class="btn btn-success" type="submit" value="Continue to Payment">
    </form>
</div>

